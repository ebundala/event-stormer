{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "headerTemplate": "{{self.moduleName}}",
    "type": "object",
    "properties": {
        "moduleName": {
            "title": "Aggregate name",
            "type": "string"
        },
        "events": {
            "title": "Events",
            "type": "array",
            "format": "tabs",
            "items": {
                "headerTemplate": "{{self.name}}",
                "$ref": "#/definitions/event"
            }
        },
        "commands": {
            "title": "Commands",
            "type": "array",
            "format": "tabs",
            "items": {
                "headerTemplate": "{{self.name}}",
                "$ref": "#/definitions/command"
            }
        },
        "sagas": {
            "title": "Sagas",
            "type": "array",
            "format": "tabs",
            "items": {
                "headerTemplate": "{{title}}",
                "$ref": "#/definitions/saga"
            }
        },
        "queries": {
            "title": "Queries",
            "type": "array",
            "format": "tabs",
            "items": {
                "headerTemplate": "{{self.name}}",
                "$ref": "#/definitions/query"
            }
        }
    },
    "required": [
        "moduleName",
        "commands",
        "events",
        "sagas",
        "queries"
    ],
    "definitions": {
        "saga": {
            "title": "Saga",
            "type": "object", 
            "properties": {
                "name": {
                    "title": "Saga name",
                    "type": "string",
                    "watch":{
                        "ev":"events"
                    },
                    "enumSource": [{
                        "source": "ev",
                        "title": "{{item.name}}",
                        "value": "{{i}}"
                      }]
                },
                "dispatches": {
                    "title": "Dispatch commands",
                    "type": "array",
                    
                    "items":{
                        "type":"integer", 
                        "headerTemplate": "command {{ i0 }}",                    
                        "watch":{
                            "ev":"commands"
                        },
                        "enumSource": [{
                            "source": "ev",
                            "title": "{{item.name}}",
                            "value": "{{i}}"
                          }]
                        
                    }
                }
            },
            "required": [
                "name",
                "dispatches"
            ]
        },
        "event": {
            "title": "Event",
            "type": "object",
            "properties": {
                "name": {
                    "title": "Event name",
                    "type": "string"
                },
                "props": {
                    "title": "Event props",
                    "type": "string",
                    "format": "json"
                    
                }
            },
            "required": [
                "name",
                "props"
            ]
        },
        "command": {
            "title": "Command",
            "type": "object",
            "properties": {
                "name": {
                    "title": "Command Name",
                    "type": "string"
                },
                "dispatches": {
                    "title": "Dispatch events",
                    "type": "array",
                    "items": {
                        "type": "integer",
                        "headerTemplate": "{{i1}}",
                        "watch": {
                            "ev": "events"
                        },
                        "enumSource": [
                            {
                                "source": "ev",
                                "title": "{{item.name}}",
                                "value": "{{i}}"
                            }
                        ]
                    }
                },
                "props": {
                    "title": "Props",
                    "type": "string",
                    "format": "json"
                }
            }
        },
        "query": {
            "title": "Query",
            "type": "object",
            "properties": {
                "name": {
                    "title": "Query name",
                    "type": "string"
                },
                "returns":{
                    "title": "Returns",
                    "type":"string",
                     "enum": ["object","array","any"]
                },
                "props": {
                    "title": "Props",
                    "type": "string",
                    "format": "json"
                }
                
            },
            "required": [
                "name",
                "props"
            ]
        }
    }
}